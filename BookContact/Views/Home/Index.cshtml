@{
    ViewBag.Title = "Home Page";
}

<main>
    <header class="masthead">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-xl-9">
                    <div class="text-center text-white">
                        <h1 class="mb-5">Welcome to BookContact</h1>
                        <div class="flex justify-content-center mb-5">
                            <div>
                                <a href="@Url.Action("List", "Author")" class="btn btn-primary btn-md active" role="button">
                                    Browse Authors
                                </a>
                            </div>
                            <div class="px-2">
                                <a href="@Url.Action("New", "Book")" class="btn btn-success btn-md active" role="button">
                                    Publish Books
                                </a>
                            </div>
                            <a href="@Url.Action("New", "Rental")" class="btn btn-danger btn-md active" role="button">
                                Rent a Book
                            </a>
                            <div class="px-2">
                                <a href="@Url.Action("List", "Contact")" class="btn btn-info btn-md active" role="button">
                                    Browser Contacts
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</main>